<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:views="clr-namespace:My.Projects.Views"
                    xmlns:refViewModels="clr-namespace:My.Projects.ViewModels.References"
                    xmlns:referenceItems="clr-namespace:My.Projects.ViewModels.ReferenceItems">
    <DataTemplate DataType="{x:Type refViewModels:DepartmentListViewModel}">
        <views:DepartmentListView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type referenceItems:DepartmentViewModel}">
        <views:DataItemView />
    </DataTemplate>
</ResourceDictionary>